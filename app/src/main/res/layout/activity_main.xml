<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F9FAFB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        app:title="Iniciar Conversa Whatsapp"
        app:titleTextColor="@android:color/black"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:elevation="4dp"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃºmero de telefone (com DDD)"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editPhone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="(XX) XXXXX-XXXX"
                    android:inputType="phone"
                    android:drawableStart="@android:drawable/ic_menu_call"
                    android:paddingStart="12dp"
                    android:backgroundTint="#38E07B" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensagem (opcional)"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editMessage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top|start"
                    android:hint="Escreva sua mensagem aqui..."
                    android:inputType="textMultiLine"
                    android:drawableStart="@android:drawable/ic_menu_edit"
                    android:paddingStart="12dp"
                    android:backgroundTint="#38E07B"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <Button
            android:id="@+id/btnStartChat"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#38E07B"
            android:drawableStart="@drawable/ic_whatsapp"
            android:text="Iniciar Conversa no WhatsApp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtDeveloper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="Developed by Renan Saccon"
        android:textColor="#374151"
        android:textSize="14sp" />

</LinearLayout>
